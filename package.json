{
  "name": "blog",
  "version": "4.0.0",
  "description": "个人博客",
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/blog"
  },
  "scripts": {
    "update": "pnpm update -r",
    "update:last": "pnpm update -r -L",
    "build": "build-website --outDir=dist",

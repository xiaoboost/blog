    "lint:fix": "pnpm run -r lint:fix --parallel --filter ."
  },
  "devDependencies": {
    "@blog/builder-website": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.25.1",
    "typescript": "^4.4.2"
  }
}

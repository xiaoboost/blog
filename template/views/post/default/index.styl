@import 'styles/variable';

Indent = 24px;
SmallIndent = 14px;

.post-default {
  card(article-width);
  margin-right: article-margin-right;

  .post-header {
    display: flex;
    height: 50px;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid GrayLight;

    setMediaTemplte(Indent, SmallIndent, @(indent) {
      margin: 0 indent;
    });

    .post-header__title {
      color: Black;
      font-size: 28px;
      margin: 0;
      padding: 0;
    }

    .post-header__create {
      color: BlackLighter;
      font-size: 12px;
      font-weight: normal;
      font-family: font-default;
    }
  }

  .post-article {
    setMediaTemplte(Indent, SmallIndent, @(indent) {
      padding: 16px indent;
    });

    font-size: 14px;

    > *:first-child {
      margin-top: 0 !important;
    }

    p {
      line-height: 1.7;
      text-indent: 2em;
      margin: 0 0 0.8em 0;

      &:last-child {
        margin-bottom: 0;
      }
    }

    code {
      margin: 0 0.2em;
      padding: 0.2em;
      font-size: 0.85em;
      background-color: YellowLighter;
      border-bottom: 0.1em solid YellowLight;
      border-top-left-radius: 4px;
      border-top-right-radius: 4px;
    }

    em {
      font-family: "EM-Lora", font-default;
      margin: 0 3px;
      font-style: normal;
      text-decoration: none;
      background-image: linear-gradient(to top, transparent, transparent 0px, BlackLighter 0px, BlackLighter 1px, transparent 1px);
      text-shadow -1px -1px 0 #fafafa, 1px -1px 0 WhiteBg, -1px 1px 0 WhiteBg, 1px 1px WhiteBg;
    }

    s {
      text-decoration-color: rgba(32, 32, 32, 0.5);
    }

    small {
      font-size: 0.8em;
    }

    sub, sup {
      font-size: 0.8em;
      margin-right: .2em;
      line-height: 0;
      position: relative;
      vertical-align: baseline;
    }

    sup {
      top: -0.5em;
    }

    sub {
      bottom: -0.3em;
    }

    a {
      cursor: pointer;
      color: BlackLighter;
      text-decoration: none;
      transition: color .2s, background .4s;

      &:hover, &:focus {
        outline: 0;
        color: Black;
      }
    }

    ul, ol {
      padding-left: 1.5em;
      line-height: 1.4;
    }

    blockquote {
      padding: .8em 1.2em;
      margin: 1em 0;
      line-height: 1.5;
      font-size: 90%;
      border-left: 0.3em solid (BlackExtraLight + #101010);
      background-color: WhiteBg;

      > * {
        margin-top: 0;
        margin-bottom: .4em;

        &:last-child {
          margin-bottom: 0;
        }
      }
    }

    span.softbreak {
      display: inline-block;
      width: 2em;
    }

    span.katex-mathml {
      display: none;
    }

    // 块级公式
    .block-formula {
      margin: 1em 0;
      position: relative;

      .formula-index {
        position: absolute;
        top: 0;
        right: 8px;
        height: 100%;
        display: flex;
        align-items: center;
      }
    }

    // 行内公式
    .inline-formula {
      margin: 0 .2em;
    }

    .image-block {
      text-indent: 0;
      display: flex;
      flex-direction: column;
      align-items: center;

      .image-inner {
        max-width: 100%;
      }

      .image-title {
        font-size: .8em;
        color: #aaa;
      }
    }

    {h-interation()} {
      position: relative;
      display: flex;
      align-items: center;

      setMediaTemplte(Indent, SmallIndent, @(indent) {
        margin-left: -1 * indent;
        margin-right: -1 * indent;
      });

      .anchor {
        font-size: .8em;
        color: BlackLight;
        cursor: pointer;
        opacity: 0;
        width: Indent;
        font-family: font-serif;
        transition: opacity .2s;
        box-sizing: border-box;
        text-align: center;
      }

      &:hover .anchor {
        opacity: 1;
      }
    }

    for level in (1..6) {
      h{level} {
        font-size: (1.6 - 0.2 * (level - 1))em;
        margin-top: (1.1 - 0.1 * (level - 1))em;
        margin-bottom: (0.8 - 0.05 * (level - 1))em;
      }
    }

    .note, .warning {
      padding: 6px 10px;
      margin: .6em 0;
      font-size: 90%;
      text-indent: 0;
      border-left: .3em solid transparent;
      background-color: (WhiteBg + #010101);
    }

    .note {
      border-color: Green;
    }

    .warning {
      border-color: RedLight;
    }

    // 代码块
    pre.code-block {
      // 浅色主题
      CodeColor = BlackLight;
      CodeBgColor = WhiteBg;
      SplitColor = Gray;
      GutterBgColor = CodeBgColor - #101010;
      GutterColor = GutterBgColor - #303030;
      highlightBgColor = BlackExtraLight;

      // 深色主题
      // CodeColor = #ABB2BF;
      // CodeBgColor = #282C34;
      // GutterColor = #636D83;

      borderRadius = 4px;

      text-shadow: none;
      position: relative;
      font-size: 0.9em;
      margin: .8em 0;
      background-color: transparent;

      @media phone {
        margin-left: -1 * SmallIndent;
        margin-right: -1 * SmallIndent;

        setScrollbarWidth('.code-block__wrapper', 4px);
      }

      .code-block__label {
        position: absolute;
        color: GutterColor;
        background-color: transparent;
        font-size: 0.8em;
        right: 4px;
        top: 4px;
      }

      .code-block__list {
        margin: 0;
        border: 0;
        padding: 0;
        display: flex;
        flex-wrap: nowrap;
        flex-direction: row;
        overflow-wrap: normal;
        white-space: inherit;
        background-color: transparent;
      }

      .code-block__wrapper {
        flex-shrink: 1;
        flex-grow: 1;
        overflow-x: auto;
        display: inline-flex;
      }

      ul {
        padding: 0;
        margin: 0;
        list-style-type: none;
      }

      li {
        padding: 0;
        margin: 0;
        line-height: 1.3;
      }

      .code-block__gutter {
        float: left;
        padding: .4em 0;
        flex-shrink: 0;
        flex-grow: 0;
        color: GutterColor;
        background-color: GutterBgColor;
        border-top-left-radius: borderRadius;
        border-bottom-left-radius: borderRadius;

        @media phone {
          border-top-left-radius: 0;
          border-bottom-left-radius: 0;
        }

        > li {
          text-align: right;
          padding-left: .4em;
          padding-right: .5em;
        }
      }

      .code-block__code {
        padding .4em 0;
        flex-grow: 1;
        flex-shrink: 0;
        color: CodeColor;
        background-color: CodeBgColor;
        border-top-right-radius: borderRadius;
        border-bottom-right-radius: borderRadius;

        @media phone {
          border-top-right-radius: 0;
          border-bottom-right-radius: 0;
        }

        > li {
          position: relative;
          padding-left: .4em;
          padding-right: .4em;
        }

        > li:after {
          content: "　";
        }
      }

      .code-block__split {
        width: 1px;
        height: 100%;
        position: absolute;
        background-color: SplitColor;
      }

      .code-block__highlight-line {
        background-color: highlightBgColor;
      }
    }
  }
}

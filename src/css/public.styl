// 全局默认内外边框为0
*
  margin 0
  padding 0
  -webkit-margin-before 0
  -webkit-margin-after 0

small
  font-size 0.8em

sub,sup 
  font-size 0.8em
  line-height 0
  position relative
  vertical-align baseline

sup
  top -0.5em
  padding-left 0.3em

sub
  bottom -0.25em

a
  color color-font
  text-decoration none
  cursor pointer
  transition color .25s,background .5s
  &:hover, &:focus
    outline 0
    text-decoration none
  &:hover:before
    transition color .25s,background .5s

input:focus
  outline none

input, button &::-moz-focus-inner
  border 0
  padding 0

.clearfix
  overflow auto

// 全局字体定义
iconfont(font-icon-family, font-icon-filename)
iconfont(font-title-family, font-title-filename)
familyfont(english-content-family, english-content-filename)
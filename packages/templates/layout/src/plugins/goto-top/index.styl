@import 'styles/variable';

#goto-top {
  position: fixed;
  right: 18px;
  bottom: 18px;
  font-size: 1.4em;
  border-radius: 100%;
  line-height: 2em;
  opacity: 0;

  .goto-top__button {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100%;
    width: 36px;
    height: 36px;
    border: 0;
    cursor: pointer;
    color: BlackLight;
    background-color: WhiteBg;
    transition: background-color .4s ease;
    box-shadow: 0 0px 5px BlackLight;

    &:hover {
      background-color: Gray;
    }
  }
}

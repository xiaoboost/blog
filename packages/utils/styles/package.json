{
  "name": "@blog/styles",
  "version": "1.0.0",
  "description": "blog styles lib",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": ["./src/*", "./src/*.ts"],
      "types": ["./src/*", "./src/*.ts"],
      "require": ["./dist/*", "./dist/*.js"]
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "npm run build -- -w",
    "lint": "eslint --quiet src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --quiet --fix src/**/*.{ts,tsx,js,jsx}"
  },
  "devDependencies": {
    "@types/color": "3.0.6",
    "@types/node": "20.19.28",
    "@xiao-ai/eslint-config": "1.0.3",
    "@xiao-ai/tsconfig": "1.0.4",
    "eslint": "8.57.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@blog/context": "workspace:*",
    "@xiao-ai/utils": "1.6.7",
    "color": "4.2.3",
    "tslib": "2.8.1"
  }
}
